{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "horizontal", "end"]
      }
    ],
    "at-rule-no-unknown": [
      true, {
        "ignoreAtRules": ["if", "else", "extend", "mixin", "include", "content", "for", "function", "return", "value"]
      }
    ],
    "font-family-no-missing-generic-family-keyword": null,
    "indentation": 2,
    "no-descending-specificity": null,
  }
}
